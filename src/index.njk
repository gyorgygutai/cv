---
layout: base.njk
permalink: /index.html
---

{# Profile Header #}
<div class="flex flex-col md:flex-row gap-6 mb-12">
  <div class="flex-shrink-0">
    <div class="w-[92px] h-[92px] rounded-full overflow-hidden opacity-100">
      <img alt="{{ profile.name }}" src="{{ profile.photo }}" class="w-full h-full object-cover opacity-100">
    </div>
  </div>
  <div class="flex-1">
    <h2 class="text-[28px] font-normal mb-2 leading-tight">{{ profile.name }}</h2>
    <p class="text-grey2 dark:text-[#bbb] mb-3">{{ profile.title }}</p>
    <div>
      <a href="https://{{ profile.website }}/" class="text-grey1 dark:text-[#eee] hover:underline">{{ profile.website }}</a>
    </div>
  </div>
</div>

{# About Section #}
<section id="about" class="mb-12 opacity-100">
  <h3 class="text-[18px] font-semibold mb-4">About</h3>
  <div class="text-grey2 dark:text-[#bbb]">
    <p>{{ about }}</p>
  </div>
</section>

{# Core Technical Skills #}
<section id="core-skills" class="mb-12 opacity-100">
  <h3 class="text-[18px] font-semibold mb-4">Core Technical Skills</h3>
  <div class="space-y-4">
    {% for skill in skills %}
    <div class="flex flex-col md:flex-row gap-2 md:gap-4">
      <div class="font-medium min-w-[140px] text-grey1 dark:text-[#eee]">
        {{ skill.category }}
      </div>
      <div class="text-grey2 dark:text-[#bbb]">
        {{ skill.items }}
      </div>
    </div>
    {% endfor %}
  </div>
</section>

{# Projects Section #}
<section id="projects" class="mb-12 opacity-100">
  <h3 class="text-[18px] font-semibold mb-6">Projects</h3>
  
  {% for project in projects %}
  <div class="mb-8 flex flex-col md:flex-row gap-4">
    <div class="text-grey3 dark:text-[#888] text-[12px] min-w-[100px] flex-shrink-0">
      {{ project.duration }}
    </div>
    <div class="flex-1">
      <div class="font-medium mb-2">
        {% if project.link %}
        <a href="{{ project.link }}" target="_blank" rel="noopener noreferrer" class="text-grey1 dark:text-[#eee] hover:underline">
          {{ project.title }}
        </a>
        <svg class="inline-block ml-1 w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z" fill="currentColor"></path>
        </svg>
        {% else %}
        {{ project.title }}
        {% endif %}
        <span class="text-grey3 dark:text-[#888] font-normal"> at {{ project.company }}</span>
      </div>
      <div class="text-grey2 dark:text-[#bbb] space-y-2">
        <ul class="list-disc pl-5 space-y-1">
          {% for item in project.description %}
          <li>{{ item }}</li>
          {% endfor %}
        </ul>
        <p class="text-[12px] mt-3">Technologies used: {{ project.technologies }}</p>
      </div>
    </div>
  </div>
  {% endfor %}
</section>

{# Work Experience Section #}
<section id="work-experience" class="mb-12 opacity-100">
  <h3 class="text-[18px] font-semibold mb-6">Work Experience</h3>
  
  {% for job in work %}
  <div class="mb-6 flex flex-col md:flex-row gap-4">
    <div class="text-grey3 dark:text-[#888] text-[12px] min-w-[100px] flex-shrink-0">
      {{ job.duration }}
    </div>
    <div class="flex-1">
      <div class="font-medium mb-1">
        {% if job.link %}
        <a href="{{ job.link }}" target="_blank" rel="noopener noreferrer" class="text-grey1 dark:text-[#eee] hover:underline">
          {{ job.position }}
        </a>
        <svg class="inline-block ml-1 w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z" fill="currentColor"></path>
        </svg>
        {% else %}
        {{ job.position }}
        {% endif %}
        <span class="text-grey3 dark:text-[#888] font-normal"> at {{ job.company }}</span>
      </div>
      {% if job.location %}
      <div class="text-grey3 dark:text-[#888] text-[12px]">{{ job.location }}</div>
      {% endif %}
    </div>
  </div>
  {% endfor %}
</section>

{# Links Section #}
<section id="contact" class="opacity-100">
  <h3 class="text-[18px] font-semibold mb-6">Links</h3>
  
  {% for link in links %}
  <div class="mb-4 flex flex-col md:flex-row gap-2 md:gap-4">
    <div class="font-medium min-w-[140px] text-grey1 dark:text-[#eee]">
      {{ link.platform }}
    </div>
    <div class="text-grey2 dark:text-[#bbb]">
      <a href="{{ link.url }}" {% if link.url.startsWith('http') %}target="_blank" rel="noopener noreferrer"{% endif %} class="text-grey1 dark:text-[#eee] hover:underline">
        {{ link.label }}
      </a>
      {% if link.url.startsWith('http') %}
      <svg class="inline-block ml-1 w-3 h-3" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M3.5 3C3.22386 3 3 3.22386 3 3.5C3 3.77614 3.22386 4 3.5 4V3ZM8.5 3.5H9C9 3.22386 8.77614 3 8.5 3V3.5ZM8 8.5C8 8.77614 8.22386 9 8.5 9C8.77614 9 9 8.77614 9 8.5H8ZM2.64645 8.64645C2.45118 8.84171 2.45118 9.15829 2.64645 9.35355C2.84171 9.54882 3.15829 9.54882 3.35355 9.35355L2.64645 8.64645ZM3.5 4H8.5V3H3.5V4ZM8 3.5V8.5H9V3.5H8ZM8.14645 3.14645L2.64645 8.64645L3.35355 9.35355L8.85355 3.85355L8.14645 3.14645Z" fill="currentColor"></path>
      </svg>
      {% endif %}
    </div>
  </div>
  {% endfor %}
</section>
